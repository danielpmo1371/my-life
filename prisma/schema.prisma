// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model projects {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  order    String
  ownerEmail String @default("no-email")
  parentId String @default("")
}

model todo {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  order    String
  ownerEmail String @default("no-email")
  parentId String @default("")
}

model mantras {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  order    String
  ownerEmail String @default("no-email")
  parentId String @default("")
}

model highLevelGoals {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  order    String
  ownerEmail String @default("no-email")
  parentId String @default("")
}

model wishListItems {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  order    String
  ownerEmail String @default("no-email")
  parentId String @default("")
}
